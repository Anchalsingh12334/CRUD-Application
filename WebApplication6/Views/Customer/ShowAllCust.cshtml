@model IEnumerable<WebApplication6.Models.Customer>

@{
    ViewData["Title"] = "ShowAllCust";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ShowAllCust</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><button class="btn btn-outline-warning">Edit</button></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><button class="btn btn-danger" >Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
